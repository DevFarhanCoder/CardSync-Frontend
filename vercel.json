{
  "version": 2,

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://cardsync-backend.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],

  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "www.instantllycards.com" }],
      "destination": "https://instantllycards.com/$1",
      "permanent": true
    }
  ]
}
